@page
@model PetShop_Atlantico.Pages.PetOwners.IndexModel

@{
    ViewData["Title"] = "PetOwner";
}

<h1>Familia</h1>

<p>
    <a asp-page="Create">Novo Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PetOwner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
