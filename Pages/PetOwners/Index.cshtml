@page
@model PetShopAtlantico.Pages.PetOwners.IndexModel

@{
    ViewData["Title"] = "Pet Owners";
}

<div class="container">

    <h1 class="titlePage">Pet Owners</h1>


    <form>
        <div class="form-row">
            <div class="col-auto">
                <label for="inlineFormInputGroup" class="sr-only">Name</label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Name</div>
                    </div>
                    <input type="text" asp-for="SearchString" class="form-control" id="inlineFormInputGroup"/>
                </div>
            </div>
            <div class="col-auto">
                <input type="submit" value="Filter" class="btn btn-primary">
            </div>
            <div class="col-auto">
                <a asp-page="Create" class="btn btn-success mb-2">Create</a>
            </div>
        </div>
    </form>

    <table class="table table-striped table-responsive-xl">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner[0].Email)
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.PetOwner)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>