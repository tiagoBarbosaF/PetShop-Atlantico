@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div id="carouselPets" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselPets" data-slide-to="0" class="active"></li>
            <li data-target="#carouselPets" data-slide-to="1"></li>
            <li data-target="#carouselPets" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/pets01.png" class="img-fluid d-block" alt="pets01">
            </div>
            <div class="carousel-item">
                <img src="img/pets02.png" class="img-fluid d-block" alt="pets02">
            </div>
            <div class="carousel-item">
                <img src="img/pets03.png" class="img-fluid d-block" alt="pets03">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselPets" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselPets" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div id="cardGrid" class="container text-center">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 19rem;">
                <img src="img/pets04.png" class="card-img-top" alt="Internacao">
                <div class="card-body">
                    <h5 class="card-title">Internação</h5>
                    <p class="card-text">Verifique reservas para internação do seu Pet</p>
                    <a href="#" class="btn btn-block btn-outline-success">CLIQUE AQUI</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 19rem;">
                <img src="img/pets05.png" class="card-img-top" alt="owner pet">
                <div class="card-body">
                    <h5 class="card-title">Owner Pet</h5>
                    <p class="card-text">Área reservada para cadastros do Responsável</p>
                    <a href="#" class="btn btn-block btn-outline-success">CLIQUE AQUI</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 19rem;">
                <img src="img/pets06.png" class="card-img-top" alt="pet">
                <div class="card-body">
                    <h5 class="card-title">Pet</h5>
                    <p class="card-text">Cadastre seu Pet aqui</p><br>
                    <a href="#" class="btn btn-block btn-outline-success">CLIQUE AQUI</a>
                </div>
            </div>
        </div>
    </div>
</div>