@page
@model PetShopAtlantico.Pages.PetOwners.CreateModel

@{
    ViewData["Title"] = "Pet Owner - Register";
}


<section>
    <h1 class="titlePage">Pet Owner - Register</h1>

    <hr/>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PetOwner.Name" class="control-label"></label>
                    <input asp-for="PetOwner.Name" class="form-control"/>
                    <span asp-validation-for="PetOwner.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PetOwner.Address" class="control-label"></label>
                    <input asp-for="PetOwner.Address" class="form-control"/>
                    <span asp-validation-for="PetOwner.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PetOwner.PhoneNumber" class="control-label"></label>
                    <input asp-for="PetOwner.PhoneNumber" class="form-control"/>
                    <span asp-validation-for="PetOwner.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PetOwner.Email" class="control-label"></label>
                    <input asp-for="PetOwner.Email" class="form-control"/>
                    <span asp-validation-for="PetOwner.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-success"/>
                        <a asp-page="./Index" class="btn btn-warning">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}