@page
@model PetShopAtlantico.Pages.Pets.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h1 class="titlePage">Pet - Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr/>
        <div class="row">
                <dt class="col-sm-auto">
                    @Html.DisplayNameFor(model => model.Pet.PetName):
                </dt>
                <dd class="col-sm-auto">
                    @Html.DisplayFor(model => model.Pet.PetName)
                </dd>
            </div>
            <div class="row">
                <dt class="col-sm-auto">
                    @Html.DisplayNameFor(model => model.Pet.Breed):
                </dt>
                <dd class="col-sm-auto">
                    @Html.DisplayFor(model => model.Pet.Breed)
                </dd>
            </div>
            <div class="row">
                <dt class="col-sm-auto">
                    @Html.DisplayNameFor(model => model.Pet.Picture):
                </dt>
                <dd class="col-sm-auto">
                    @Html.DisplayFor(model => model.Pet.Picture)
                </dd>
            </div>
            <div class="row">
                <dt class="col-sm-auto">
                    @Html.DisplayNameFor(model => model.Pet.OwnerName):
                </dt>
                <dd class="col-sm-auto">
                    @Html.DisplayFor(model => model.Pet.OwnerName)
                </dd>
            </div>
            <div class="row">
                <dt class="col-sm-auto">
                    @Html.DisplayNameFor(model => model.Pet.PetOwner):
                </dt>
                <dd class="col-sm-auto">
                    @Html.DisplayFor(model => model.Pet.PetOwner.Email)
                </dd>
            </div>
        <form method="post">
            <input type="hidden" asp-for="Pet.Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a asp-page="./Index" class="btn btn-primary">Back</a>
        </form>
    </div>
</div>